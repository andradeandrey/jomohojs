/**
 * Camera class keeps track of the current 
 * drawing position
 */


define(["./core", 
        "./system", 
        "./Point"], 
        function(core, 
        		sys, 
        		Point){
	
	var screen= sys.screen, 
		input= sys.input, 
		res= sys.resources;

	var Camera = core.Class.extend({
		p: new Point(0,0),
		init: function(){
			p= new Point(0,0);
		},
		toScreenPos: function(p){
			return p.dif(this.p);
		},
		toWorldPos: function(p){
			return p.sum(this.p);
		},
		parrallax: function(val, width, height){
			var para= this.p.mul(val);
			para.x= para.x%width;
			para.y=para.y%height;
			return para.negate();
		}
	});
	return Camera;
});