/**
 * a simple Tile class does not do much up until now
 */

define([ './core', './system', './Point' ], function(core, sys, Point) {
	var tileWidth = 32, tileHeight = 32;
	var screen = sys.screen;
	Tile = core.Class.extend({
		isSolid : true,
		init : function(solid) {
			this.isSolid = solid;
		},
		draw : function(pos) {
			if (sys.debug) {
				if (this.isSolid) {
					screen.stroke = screen.color(0, 255, 0);
					screen.fill = 0;
					screen.rect(pos, tileWidth, tileHeight);
				}
			}
		}

	});

	Tile.getW = function() {
		return tileWidth;
	};
	Tile.getH = function() {
		return tileHeight;
	};

	return Tile;
});